<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/rl_zhengban_stub"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/section_margin"
    android:paddingRight="@dimen/section_margin"
    android:background="@drawable/item_border"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:id="@+id/ll_bidding_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/content_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_expectation_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="竞拍价"
            android:textSize="14sp"
            android:textColor="@color/gray_content"/>

        <EditText
            android:id="@+id/et_bidding_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="在此输入竞拍价"
            android:inputType="number"
            android:textSize="14sp"
            android:textColor="@color/gray_content"/>

    </LinearLayout>
</RelativeLayout>